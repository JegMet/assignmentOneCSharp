<UserControl x:Class="AssignmentOneCSharp.NowPlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssignmentOneCSharp"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400">

    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <Label Content="Now Playing" Style="{StaticResource LabelStyle}" FontSize="14" FontWeight="Bold"/>

        <Label x:Name="Title" Content="Title" Style="{StaticResource LabelStyle}"/>
        <Label x:Name="Artist" Content="Artist" Style="{StaticResource LabelStyle}"/>
        <Label x:Name="Album" Content="Album" Style="{StaticResource LabelStyle}"/>
        <Label x:Name="Year" Content="Year" Style="{StaticResource LabelStyle}"/>
        <Label x:Name="duration" Content="Duration" Style="{StaticResource LabelStyle}"/>
    </StackPanel>
</UserControl>
